<h1>List#index</h1>

<div class="header">
  <h1>Voici vos liste de film</h1>
  <%= link_to "add", new_list_path, class: "button"%>
</div>

<div class="list">
  <% @lists.each do |list| %>
  <div class="card">
    <%= link_to list_path(list), class: "card--clickable" do %>
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, class: "card--image" %>
        <% end %>
        <div class="card--infos">
          <h1><%= list.name %></h1>
        </div>
      </div>
    <% end %>
  <% end %>
</div>