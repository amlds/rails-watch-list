<div class="header">
  <h1><%=@list.name%></h1>
  <%= link_to "add", new_list_bookmark_path(@list), class: "button"%>
</div>

<div class="list">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card">
    <div class="card--image" style="background-image: url('<%= bookmark.movie.poster_url %>'"></div>
    <div class="card--infos">
      <h1><%= bookmark.movie.title %></h1>
      <div class="card--infos--right">
        <p class="card--infos--tag"><%= bookmark.comment %></p>
        <%= link_to "delete",
        bookmark_path(bookmark), class: "button",
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    </div>
  </div>
  <% end %>
</div>